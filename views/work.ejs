<%- include("partials/header.ejs") %>

<div class="tasks container">
  <div class="date">
    <% const d = new Date(); %>
    <p>Work Tasks</p>
  </div>
  <div class="tasks-list">
    <form action="/work-list" method="POST" class="tasks-box">
      <% if(locals.theWorkTasks.length) {%>
        <% for (let I = 0; I < theWorkTasks.length; I++) {%>
          <div class="task">
            <input type="checkbox" name="checkbox" value="<%= theWorkTasks[I]._id %>" id="<%= I %>" class="checkbox" onChange="this.form.submit()">
            <!-- <button name="checkbox" value="<%= I %>" id="<%= I %>" class="checkbox" type="submit">âœ”</button> -->
            <label for="checkbox" class="task-content<%= I %>"> <%= theWorkTasks[I].name; %> </label><br>
          </div>
        <% } %>
      <% }else{ %>
        <div class="task">
          <p class="no-tasks">no tasks yet...</p><br>
        </div>
      <% } %>
    </form>

    <div class="add-task-bar">
      <form action="/work" method="POST">
        <input type="text" id="new-task" class="new-task-bar" name="new-task" placeholder="Add a new task..">
        <!-- <input type="submit" value="+" class="adding-btn"> -->
        <button type="submit" class="adding-btn">+</button>
      </form>
    </div>
  </div>

  <div class="delete-all">
    <form action="/delete-work" method="post">
      <button class="delete-all-btn">Delete All</button>
    </form>
  </div>
</div>

<%- include("partials/footer.ejs") %>